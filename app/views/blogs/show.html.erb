<div class="col-sm-8 blog-main">

  <h2><%= @blog.title %></h2>

<nav class="breadcrumb">

    <%= link_to "Home", root_path, class: 'breadcrumb-item' %>
    <%= link_to "Blog", blogs_path, class: 'breadcrumb-item' %>
    <%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'breadcrumb-item' %>
    <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog), class: 'breadcrumb-item' if logged_in?(:site_admin) %> &nbsp
    <%= link_to fa_icon('trash'), @blog, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } if logged_in?(:site_admin) %> &nbsp

    <span class="breadcrumb-item active"><%= @blog.title %> &nbsp</span>
</nav>


  <p>
  	<%= markdown @blog.body %>
  </p>

